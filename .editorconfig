root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.min.*]
indent_style = ignore
trim_trailing_whitespace = false
insert_final_newline = false

[*.{md,txt}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
